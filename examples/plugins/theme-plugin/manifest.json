{
  "id": "custom-theme",
  "name": "Custom Theme Plugin",
  "description": "Adds custom themes and styling options to enhance your workspace appearance",
  "version": "1.0.0",
  "author": "ReNote Design Team",
  "homepage": "https://github.com/renote/theme-plugin",
  "repository": "https://github.com/renote/theme-plugin",
  "license": "MIT",
  "tags": ["theme", "styling", "appearance", "ui"],
  "main": "index.js",
  "assets": ["themes.css", "dark-theme.css", "light-theme.css"],
  "minAppVersion": "1.0.0",
  "permissions": [
    "workspace:read",
    "workspace:write",
    "ui:menu",
    "ui:panel"
  ],
  "config": {
    "currentTheme": "default",
    "customColors": {
      "primary": "#3b82f6",
      "secondary": "#6b7280",
      "accent": "#10b981",
      "background": "#ffffff",
      "text": "#111827"
    }
  },
  "commands": [
    {
      "id": "open-theme-panel",
      "name": "Open Theme Panel",
      "callback": "openThemePanel",
      "hotkey": "Ctrl+Shift+T"
    },
    {
      "id": "toggle-theme",
      "name": "Toggle Dark/Light Theme",
      "callback": "toggleTheme",
      "hotkey": "Ctrl+Shift+D"
    }
  ],
  "menus": [
    {
      "id": "theme-menu",
      "label": "Themes",
      "icon": "palette",
      "parent": "tools",
      "action": "open-theme-panel"
    }
  ],
  "panels": [
    {
      "id": "theme-panel",
      "title": "Theme Settings",
      "icon": "palette",
      "position": "right",
      "content": "theme-component"
    }
  ],
  "hooks": {
    "onLoad": "applyStoredTheme"
  }
}
